.navbar.navbar-default.navbar-static-top.navbar-inverse
  .container
    %button.navbar-toggle(type="button" data-toggle="collapse" data-target=".navbar-responsive-collapse")
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    = link_to "Inova Crm", root_url, class: "navbar-brand"
    .navbar-collapse.collapse.navbar-responsive-collapse.navbar-right.fixed
      %ul.nav.navbar-nav
        %li.small_scale_margin-right10= link_to "Configuration", "/path1", class: "organization text-hide nav-icon", data: {toggle: "tooltip", placement: "bottom"}, title: "Configuration", rel: "tooltip"
        %li.small_scale_margin-right10= link_to "Suppliers", "/path2", class: "supplier text-hide nav-icon", data: {toggle: "tooltip", placement: "bottom"}, title: "Supplier", rel: "tooltip"
        %li.small_scale_margin-right10= link_to "Customers", "/path3", class: "customers text-hide nav-icon", data: {toggle: "tooltip", placement: "bottom"}, title: "Customer", rel: "tooltip"
        - if user_signed_in?
          %li.dropdown
            = link_to "Dropdown", "#", class: "dropdown-toggle me text-hide nav-icon col-lg-offset-7", "data-toggle" => "dropdown", data: {toggle: "tooltip", placement: "bottom", toggle: "dropdown"}, title: "My Profile", rel: "tooltip"
            %ul.dropdown-menu{role: "menu"}
              %li
                = link_to "Sample","#"
              %li
                = link_to "Sample","#"
              %li
                = link_to "Sample","#"

              %li= link_to "Sign Out", destroy_user_session_path, method: :delete