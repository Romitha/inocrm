.row.margin-none
  .col-md-1
    = image_tag (organization.logo.thumb.url || "organization_image.png"), alt: organization.name, class: "img-responsive img-thumbnail"
  .col-md-11
    .row
      .col-md-12
        %h4.strong.margin-top0= link_to organization.name, organization, target: "_blank"
      .col-md-12
        Vat Number: #{organization.vat_number}
      .col-md-12
        #{relation} of #{link_to relation_organization.name, relation_organization}
      .col-md-12
        %span
          = link_to edit_organization_path(organization), class: "has-tooltip", data: {toggle: "tooltip", placement: "right"}, title: "Edit #{organization.name}" do
            = glyph(:pencil, {tag: :span})
        %span
          = link_to remove_relation_organization_path(organization, relation: relation, relation_organization: relation_organization), class: "has-tooltip", data: {confirm: "Do you want to remove the relationship? Please consider of the vat number with high priority",toggle: "tooltip", placement: "right"}, title: "Remove parent relation of #{organization.name} from #{relation_organization.name}" do
            = glyph(:remove, {tag: :span})
  %hr