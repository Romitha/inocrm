= simple_nested_form_for organization, html: {class: "form-horizontal"} do |f|
  = f.input :name
  = f.input :short_name
  = f.input :description
  = f.input :logo

  = f.fields_for :addresses do |address|
    = address.input :category, collection: Address::TYPE, include_blank: false
    = address.input :address
    = address.link_to_remove "Remove this address"
  = f.link_to_add "Add an address", :addresses
  .form-group
    = f.submit nil, class: "btn btn-default"