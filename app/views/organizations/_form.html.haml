= simple_nested_form_for organization, html: {class: "form-horizontal"} do |f|
  = f.input :name
  = f.input :short_name
  = f.input :vat_number
  = f.input :web_site
  = f.input :description
  = f.input :logo

  .form-group
    = f.fields_for :addresses do |address|
      = address.input :category, collection: Address::TYPE, include_blank: false
      = address.input :address
      = address.link_to_remove "Remove this address"
    = f.link_to_add "Add an address", :addresses

  .form-group
    = f.fields_for :contact_numbers do |contact_number|
      = contact_number.input :category, collection: ContactNumber::TYPE, include_blank: false
      = contact_number.input :value
      = contact_number.link_to_remove "Remove this contact number"
    = f.link_to_add "Add an contact number", :contact_numbers
  .form-group
    = f.submit nil, class: "btn btn-default"