- ticket = @ticket
- product = @product
- estimation = @estimation
- grn_items = @grn_items
= render "tickets/tickets_pack/ticket_header", ticket: ticket, product: product

= tab_panel do
  = tab_nav_tab({class: "small_scale_margin-bottom1"}, ticket_info: {content: "Ticket info"}, low_margin_estimate_parts_approval: {content: "Parts Estimation Approval", active_class: "active"} )
  .tab-content
    = tab_content tabpointer: :ticket_info do
      = tab_panel do
        = render "tickets/tickets_pack/ticket_info", ticket: ticket, product: product
    = tab_content tabpointer: :low_margin_estimate_parts_approval, active_class: "active" do
      = tab_panel do
        = render "tickets/tickets_pack/low_margin_estimate_parts_approval/low_margin_estimate_parts_approval", estimation: estimation, grn_items: grn_items, ticket: ticket