%strong Payment Recieved

%table.table.table-hover
  %thead
    %tr
      %th No
      %th Paid At
      %th Payment Type
      %th Amount
      %th Note
      %th Inoice No
      %th Recieved By
  %tbody
    - ticket.ticket_payment_receiveds.each_with_index do |payment, index|
      %tr
        %th{:scope => "row"} #{index+1}
        %td= payment.try(:created_at).try(:strftime, "%d %b, %Y")
        %td= payment.ticket_payment_received_type.try(:name)
        %td= number_to_currency payment.try(:amount), delimiter: ",", unit: payment.currency.code, format: "%u %n"
        %td= payment.try(:note)
        %td= payment.ticket_invoice.try(:invoice_no).to_s.rjust(6, INOCRM_CONFIG['invoice_no_format'])
        %td= User.find_by_id(payment.try(:received_by)).try(:email)
