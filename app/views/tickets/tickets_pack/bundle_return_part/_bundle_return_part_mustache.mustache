<div class="table-responsive" style="height: 110px; overflow-y: auto;">
<table class="table table-bordered">
<thead>
<tr>
<th>No</th>
<th>Date Returned</th>
<th>Event No</th>
<th>Ticket No</th>
<th>Part No</th>
<th>Description</th>
<th>Serial No</th>
<th>Part Status</th>
<th>Action</th>
</tr>
</thead>
<tbody>
{{#.}}
%tr
  %td
    {{indexer}}
  %th
    {{date_returned}}
  %td
    {{event_no}}
  %td
    {{ticket_no}}
  %td
    {{spare_part_no}}
  %td
    {{spare_part_description}}
  %td
    {{serial_no}}
  %td
    {{part_status}}
  %td
    %a{ href: "#", onclick: "Inventories.load_mustache_bundle_return_part('{{task_action}}', {{id}}); return false;"}
      {{task_action_name}}
{{/.}}
</tbody>
</table>
</div>