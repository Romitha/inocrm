                = ticket_spare_part.ticket_spare_part_store ? "Store / " : "Manufacture / "
                = ticket_spare_part.cus_chargeable_part ? "Chargeable" : "Non-chargeable"
            %hr

            - if ticket_spare_part.ticket_spare_part_store
              .col-md-3
                %strong
