            .col-md-3
              %strong
                FSR No:
              = ticket_spare_part.ticket_fsr and ticket_spare_part.ticket_fsr.id.to_s.rjust(6, INOCRM_CONFIG["fsr_no_format"])
            .col-md-3
              %strong
                Faulty Serial No:
              = ticket_spare_part.faulty_serial_no
            .col-md-3
              %strong
