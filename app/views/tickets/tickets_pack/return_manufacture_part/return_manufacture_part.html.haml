- ticket = @ticket
- product = @product

= render "tickets/tickets_pack/ticket_header", ticket: ticket, product: product

= tab_panel do
  = tab_nav_tab({class: "small_scale_margin-bottom1"}, ticket_info: {content: "Ticket info"}, return_manufacture_part: {content: "Return to Stores", active_class: "active"} )
  .tab-content
    = tab_content tabpointer: :ticket_info do
      = tab_panel do
        = render "tickets/tickets_pack/ticket_info", ticket: ticket, product: product
    = tab_content tabpointer: :return_manufacture_part, active_class: "active" do
      = tab_panel do
        = render "tickets/tickets_pack/return_manufacture_part/return_manufacture_part", ticket: ticket, product: @product, ticket_spare_part: @ticket_spare_part