- ticket = @ticket
- product = @product
- supp_engr_user = supp_engr_user
- user_ticket_action = @user_ticket_action
= render "tickets/tickets_pack/ticket_header", ticket: ticket, product: product

= tab_panel do
  = tab_nav_tab({class: "small_scale_margin-bottom1"}, ticket_info: {content: "Ticket info"}, quality_control: {content: "Quality Control", active_class: "active"} )
  .tab-content
    = tab_content tabpointer: :ticket_info do
      = tab_panel do
        = render "tickets/tickets_pack/ticket_info", ticket: ticket, product: product#, customer: customer, warranties: warranties, histories: histories, join_tickets: join_tickets, ge_q_and_as: ge_q_and_as, pr_q_and_as: pr_q_and_answers
    = tab_content tabpointer: :quality_control, active_class: "active" do
      = tab_panel do
        = render "tickets/tickets_pack/quality_control/quality_control", ticket: ticket, supp_engr_user: supp_engr_user, action_no: @action_no, user_ticket_action: user_ticket_action