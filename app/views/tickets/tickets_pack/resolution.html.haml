/ = product
- ticket = @ticket
- product = @product
- warranties = @warranties
- customer = ticket.customer
- histories = @histories
- join_tickets = @join_tickets
- pr_q_and_answers = @q_and_answers
- ge_q_and_as = @ge_q_and_answers
= render "tickets/tickets_pack/ticket_header", ticket: ticket, product: product

= tab_panel do
  = tab_nav_tab({class: "small_scale_margin-bottom2"}, ticket_info: {content: "Ticket info"}, assign_ticket: {content: "Resolution", active_class: "active"})
  .tab-content
    = tab_content tabpointer: :ticket_info do
      = tab_panel do
        = render "tickets/tickets_pack/ticket_info", ticket: ticket, product: product, customer: customer, warranties: warranties, histories: histories, join_tickets: join_tickets, ge_q_and_as: ge_q_and_as, pr_q_and_as: pr_q_and_answers
    = tab_content tabpointer: :assign_ticket, active_class: "active" do
      = tab_panel do
        = render "tickets/tickets_pack/ticket_resolution", ticket: ticket, product: product, customer: customer, warranties: warranties
        = render "tickets/tickets_pack/resolution/re_assign"
      .row
        .col-md-12
          .col-md-1
            %strong Start At :
          .col-md-3
            YYYY/MM/DD HH:MM
          %br
          %br
      %form.form-horizontal
        .row
          .col-md-12
            .form-group
              %label.col-sm-1.control-label Action
              .col-sm-8
                .dropdown
                %button#dropdownMenu1.btn.btn-default.dropdown-toggle{"aria-expanded" => "true", "aria-haspopup" => "true", "data-toggle" => "dropdown", :type => "button"}
                  Dropdown
                  %span.caret
                %ul.dropdown-menu{"aria-labelledby" => "dropdownMenu1"}
                  %li
                    %a{:href => "#"} xxxxxxxxxx
                  %li
                    %a{:href => "#"} xxxxxxxxxx
                  %li
                    %a{:href => "#"} xxxxxxxxxx
                  %li
                    %a{:href => "#"} xxxxxxxxxx
        .row
          .col-md-12
            .form-group
              %label.col-sm-1.control-label Note
              .col-sm-10
                %textarea.form-control{:rows => "2"}
        .row
          .col-md-1
          .col-md-3
            .checkbox
            %label
              %input{:type => "checkbox"}
                Re-assign
          .col-md-6
            .row
              %br
              .form-group
                %label.col-sm-1.control-label Reason
                .col-sm-10
                  .dropdown
                  %button#dropdownMenu1.btn.btn-default.dropdown-toggle{"aria-expanded" => "true", "aria-haspopup" => "true", "data-toggle" => "dropdown", :type => "button"}
                    Dropdown
                    %span.caret
                  %ul.dropdown-menu{"aria-labelledby" => "dropdownMenu1"}
                    %li
                      %a{:href => "#"} xxxxxxxxxx
                    %li
                      %a{:href => "#"} xxxxxxxxxx
                    %li
                      %a{:href => "#"} xxxxxxxxxx
                    %li
                      %a{:href => "#"} xxxxxxxxxx
                  %button.btn.btn-default.btn-xs{:type => "button"}
                    %span.glyphicon.glyphicon-plus
          .col-md-1
            %button.btn.btn-success{:type => "button"} Start