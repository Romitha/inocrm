- ticket = @ticket
- product = @product
- onloan_request = @onloan_request
- spare_part = @spare_part
- onloan_spare_part = @onloan_spare_part
- ticket_terminate_job = @ticket_terminate_job
- ticket_action = @ticket_action
- terminate_job_payment = @terminate_job_payment
= render "tickets/tickets_pack/ticket_header", ticket: ticket, product: product

= tab_panel do
  = tab_nav_tab({class: "small_scale_margin-bottom1"}, ticket_info: {content: "Ticket info"}, terminate_job_foc_approval: {content: "Terminate job foc approval", active_class: "active"})
  .tab-content
    = tab_content tabpointer: :ticket_info do
      = tab_panel do
        = render "tickets/tickets_pack/ticket_info", ticket: ticket, product: product#, customer: customer, warranties: warranties, histories: histories, join_tickets: join_tickets, ge_q_and_as: ge_q_and_as, pr_q_and_as: pr_q_and_answers
    = tab_content tabpointer: :return_store_part, active_class: "active" do
      = tab_panel do
        = render "tickets/tickets_pack/terminate_job_foc_approval/terminate_job_foc_approval", ticket: ticket, terminate_job_payment: terminate_job_payment, ticket_action: ticket_action, ticket_terminate_job: ticket_terminate_job