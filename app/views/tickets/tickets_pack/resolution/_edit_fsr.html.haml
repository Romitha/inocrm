%fieldset
  %legend Edit FSR
  = simple_nested_form_for ticket, url: update_edit_fsr_ticket_path(ticket), method: :post do |f|
    = f.simple_fields_for "ticket_fsrs_attributes[]", ticket.ticket_fsrs.build do |fsr|
      %strong FSR Infomation 
      .row
        .col-md-4
          = fsr.input :work_started_at, as: :string, input_html: {class: "datepicker"}
        .col-md-4
          = fsr.input :work_finished_at, as: :string, input_html: {class: "datepicker"}
        .col-md-4
          %p FSR No: #{fsr.object.id}
      .row
        = fsr.input :hours_worked, wrapper_html: {class: "col-md-5"}
        = fsr.input :down_time, wrapper_html: {class: "col-md-5"}
      .row
        = fsr.input :travel_hours, wrapper_html: {class: "col-md-5"}
      %strong For Invoice
      .row
        = fsr.input :engineer_time_travel, wrapper_html: {class: "col-md-5"}
        = fsr.input :engineer_time_on_site, wrapper_html: {class: "col-md-5"}
      .row
        = fsr.input :resolution, input_html: {value: nil}, wrapper_html: {class: "col-md-9"}
        = fsr.input :completion_level, as: :radio_buttons, label: "Completion Level", wrapper_html: {class: "col-md-3"}, collection: ["Full","Patial"], wrapper: :append
    = f.input :remarks, input_html: {value: nil}
    = simple_format ticket.remarks
    = f.submit "Save", class: "btn btn-success btn-sm"