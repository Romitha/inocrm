- request_spare_part_id = (params[:request_spare_part_id] or session[:request_spare_part_id])
- spare_part = TicketSparePart.find request_spare_part_id
- product = @product

.row
  .col-md-4
    %strong Activity:

.row{style: "margin-top: 15px;"}
  .col-md-4
    %strong Part Status: 
    #{spare_part.spare_part_status_action.name}

.row
  .col-md-4
    %strong Spare Part No: 
    #{spare_part.spare_part_no}
  .col-md-4
    %strong Status:
    #{spare_part.spare_part_status_use.name}
  .col-md-4
    %strong Product Brand:
    #{product.product_brand.name}

.row
  .col-md-4
    %strong Part Description:
    #{spare_part.spare_part_description}
  .col-md-4
    %strong Un Used Return Reason :
    #{spare_part.spare_part_description}

.row{style: "margin-top: 10px;"}
  .col-md-4
    %strong Received Spare Part  No:
    #{spare_part.received_spare_part_no}
  .col-md-4
    %strong Part Event No: 
    #{spare_part.ticket_spare_part_manufacture.try(:event_no)}

.row{style: "margin-top: 10px;"}
  .col-md-4
    %strong Part Serial No:
  .col-md-4
    %strong Return Part Serial No:
    #{spare_part.return_part_serial_no}

.row
  .col-md-4
    %strong Part CT No:
  .col-md-4
    %strong Return CT No:
    #{spare_part.return_part_ct_no}


.row{style: "margin-top:15px;"}
  .col-md-6
    = simple_form_for spare_part, url: return_to_stores_tickets_path, method: :post, remote: true do |f|
      = f.input :returned_part_accepted, as: :radio_buttons
      / = f.radio_button :returned_part_accepted, 'email', :checked => true
      / = label :returned_part_accepted, 'Email'
      / = f.radio_button :returned_part_accepted, 'sms'
      / = label :returned_part_rejected, 'SMS'

      / = f.input :returned_part_accepted, as: :radio_buttons, collection: ["Accept Return Part", "Reject Return Part"]


