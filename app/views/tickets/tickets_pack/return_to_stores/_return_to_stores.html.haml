.row{style: "margin-top:15px;"}
  .col-md-6
    = simple_form_for spare_part, url: return_to_stores_tickets_path, method: :post, remote: true do |f|
      = f.input :returned_part_accepted, as: :radio_buttons, collection: {"Accept Returned Part" => true, "Reject Return Part" => false}, label:""
#reject
  %fieldset
    %legend Reject Return Part
    = simple_nested_form_for spare_part, url: update_order_mfp_part_order_tickets_path, method: :post, remote: true do |f|
      = hidden_field_tag :process_id, session[:process_id]
      = hidden_field_tag :task_id, session[:task_id]
      = hidden_field_tag :owner, session[:owner]
      = hidden_field_tag :request_spare_part_id, session[:request_spare_part_id]
      = hidden_field_tag :status_action_id, :value => "RPR"
      = f.input :note, input_html: {value: nil}
      = simple_format spare_part.note
      = f.submit "Save", class: "btn btn-success"

#accept
  %fieldset
    %legend Ready to Bundle (Return to Manufacture)
    = simple_nested_form_for spare_part, url: update_order_mfp_part_order_tickets_path, method: :post, remote: true do |f|
      = hidden_field_tag :process_id, session[:process_id]
      = hidden_field_tag :task_id, session[:task_id]
      = hidden_field_tag :owner, session[:owner]
      = hidden_field_tag :request_spare_part_id, session[:request_spare_part_id]
      = f.input :note, input_html: {value: nil}
      = simple_format spare_part.note
      = f.submit "Save", class: "btn btn-success"





