- index = 0
.row
  %form{:action => customer_advance_payment_tickets_path, :method => "get"}
    .row
      .col-md-3
        .h3 Customer Advance/Final Payment
      .col-md-4
        = label_tag "Customer Name:"
        = text_field_tag "customer_name", params[:customer_name]
        / = select_tag "customer_name[id]", options_from_collection_for_select(@customers, :id, :name, (params[:customer_name] and params[:customer_name][:name]))
      .col-md-3
        = submit_tag "Search", :name => nil
    .row
      .col-md-12
        = render "tickets/tickets_pack/customer_advance_payment/payment_pending_tickets", tickets: @tickets
