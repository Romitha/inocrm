- ticket = @ticket

.row
  .col-md-12
    = simple_form_for ticket do |f|
      = f.input :status_id, as: :hidden
      = f.input :ticket_no, as: :hidden
      = f.input :base_currency_id, as: :hidden, input_html: {value: TicketCurrency.find_by(base_currency: true).try(:id)}
      .col-md-9
        = f.association :job_type, wrapper_html: {class: "col-md-6"}
        = f.association :inform_method, wrapper_html: {class: "col-md-6"}
        = f.association :ticket_contact_type, wrapper_html: {class: "col-md-6"}
        = f.association :problem_category, wrapper_html: {class: "col-md-6"}
        = f.input :problem_description
        = f.input :other_accessories
        = f.input :remarks
        = f.input :resolution_summary
        = f.association :warranty_type, as: :radio_buttons
      .col-md-3
        = f.input :priority, collection: INOCRM_CONFIG["priority"]
        = f.input :cus_chargeable, as: :radio_buttons
        %hr
        = f.association :ticket_type, as: :radio_buttons