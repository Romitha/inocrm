- if @notice
  .alert.alert-success= @notice
- elsif product.errors.present?
  .alert.alert-danger{:role => "alert"}
    %button.close{"aria-label" => "Close", "data-dismiss" => "alert", :type => "button"}
      %span{"aria-hidden" => "true"} &times;
    %ul
      - product.errors.full_messages.each do |error|
        %li= error
%fieldset
  %legend Product
  = simple_form_for product, url: create_product_tickets_path, remote: true do |f|
    .row
      .col-md-3
        = f.association :product_brand, wrapper_html: {style: "width: 93%; float: left;"}
        .add_sign
          = link_to new_product_brand_tickets_path, remote: true, title: "New Product" do
            %span.glyphicon.glyphicon-plus-sign
      .col-md-3
        = f.association :product_category, collection: ProductBrand.all, as: :grouped_select, group_method: :product_categories, input_html: {class: "chosen-select"}, wrapper_html: {style: "width: 93%; float: left;"}
        .add_sign
          = link_to new_product_category_tickets_path, remote: true, title: "New Category" do
            %span.glyphicon.glyphicon-plus-sign
      = f.input :serial_no, wrapper_html: {class:"col-md-2"}, :readonly=>true
      = f.input :model_no, wrapper_html: {class:"col-md-2"}
      = f.input :product_no, wrapper_html: {class:"col-md-2"}
    .row  
      / = f.input :corporate_product, as: :radio_buttons, wrapper_html: {class:"col-md-3"}
    .row
      = f.association :product_pop_status, collection: ProductPopStatus.first(3), include_blank: false, wrapper_html: {class:"col-md-3"}
      .col-md-3
        = f.association :product_sold_country, wrapper_html: {style: "width: 93%; float: left;"}, label_method: :Country, value_method: :id
        .add_sign
          = link_to create_product_country_tickets_path(status_param: "initiate"), method: :post, remote: true, title: "Country" do
            %span.glyphicon.glyphicon-plus-sign
      = f.input :pop_note, wrapper_html: {class:"col-md-6"}
    .row
      .col-md-12
        = f.submit "Next", name: "next_to_customer"
        = link_to "Cancel", new_ticket_path