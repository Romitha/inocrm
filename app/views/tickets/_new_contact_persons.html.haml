- customer = @new_customer
#customer_details
.table-responsive.col-md-6.table-borderless
  %table.table
    %tbody
      %tr
        %td.text-right
          %strong Customer Name:
        %td= customer.name
        %td.text-right
          %strong Problem Category:
        %td=ticket.problem_category.try(:name)
      %tr
        %td.text-right
          %strong Customer Address:
        %td
          = customer.address1
          %br/
          = customer.address2
          %br/
          = customer.address3
          %br/
          = customer.address4
        %td.text-right
          %strong Problem Description:
        %td=ticket.problem_description
%hr
= link_to "contact person", contact_persons_tickets_path, remote: true
#contact_persons
  .row
    .col-md-6
      = label_tag "Select contact person1" do
        = radio_button_tag "contact_person1", "select", false, class: "radio_for_contact_person1", data: {param: "select_contact_person1"}
        Select Contact Person1
      = label_tag "Create contact person1" do
        = radio_button_tag "contact_person1", "create", false, class: "radio_for_contact_person1", data: {param: "create_contact_person1"}
        Create Contact Person1
    .col-md-6
      = label_tag "Select contact person2" do
        = radio_button_tag "contact_person2", "select", false, class: "radio_for_contact_person2", data: {param: "select_contact_person2"}
        Select Contact Person2
      = label_tag "Create contact person2" do
        = radio_button_tag "contact_person2", "create", false, class: "radio_for_contact_person2", data: {param: "create_contact_person2"}
        Create Contact Person2


#contact_person.modal.fade{tabindex: -1, role: "dialog", "aria-labelledby" => "contact_person", "aria-hidden" => true}
  .modal-dialog
    .modal-content
