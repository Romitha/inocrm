                  = oc.association :contact_person_type, required: true, include_blank: false, wrapper_html: {class: "col-md-4"}, input_html: {class: "chosen-select"}

                  = oc.input :name, wrapper_html: {class: "col-md-6"}, input_html: {class: "has-tooltip", data: {toggle: "tooltip", placement: "left"}, title: "Person Name"}, required: true

                  = oc.input :email, wrapper_html: {class: "col-md-6"}, input_html: {class: "has-tooltip", data: {toggle: "tooltip", placement: "left"}, title: "Email Address"}

                  = oc.input :mobile, wrapper_html: {class: "col-md-6"}, input_html: {class: "has-tooltip", data: {toggle: "tooltip", placement: "left"}, title: "Mobile Number"}

                  = oc.input :telephone, wrapper_html: {class: "col-md-6"}, input_html: {class: "has-tooltip", data: {toggle: "tooltip", placement: "left"}, title: "Fixed Line"}

                  = oc.input :designation, wrapper_html: {class: "col-md-6"}, input_html: {class: "has-tooltip", data: {toggle: "tooltip", placement: "left"}, title: "Designation"}

                  = oc.input :note, wrapper_html: {class: "col-md-12"}, input_html: {class: "has-tooltip", data: {toggle: "tooltip", placement: "left"}, title: "Note"}

                  = oc.hidden_field :organization_id

                  / = f.submit "Add new Contact", class: "btn btn-success pull-right", id: "submit_new_contact_person"
                  = oc.submit "Save", name: "save", class: "col-md-2 btn btn-success pull-left"