= simple_form_for @customer_contact_type, url:  update_customer_contact_type_admins_path do |f|
  .row
    .col-md-6
      = f.input :name
    .col-md-2
      = f.input :mobile, wrapper: :append
    .col-md-2
      = f.input :email, wrapper: :append
  .row
    .col-md-10
      = f.submit "Save", class: "btn btn-success pull-right", id: "submit_new_customer_contact_type"
