#accordion.panel-group
  - @sbu_all.each_with_index do |sbu, index|
    .panel.panel-info
      .panel-heading
        %h3.panel-title
          %a.accordion-toggle{"data-parent" => "#accordion", "data-toggle" => "collapse", :href => "##{index}"}
            #{index+1} Sbu : #{sbu.sbu}
          - unless sbu.is_used_anywhere?
            = link_to delete_admin_sbu_admins_employees_path(sbu_id: sbu.id),method: :delete,  :data => { :confirm => 'Are you sure?' } do
              %span.glyphicon.glyphicon-trash

      .panel-collapse.collapse.in{:id => "#{index}"}
        .panel-body
          .row.col-md-12
            .col-md-1
              %strong Sbu:
            .col-md-4
              = link_to "#", class: "inline_edit load_style", data: {type: "text", resource: "sbu", name: "sbu", url: employee_sbu_admins_employees_path(edit: true, sbu_id: sbu.id), "original-title" => "Update Admin Sbu", value: ""}, style: "line-height: 6px;" do
                = sbu.sbu
          .row.col-md-12
            - sbu.sbu_engineers.each do |sbu_engineer|
              .panel.panel-danger
                .panel-heading
                  %h3.panel-title
                    %span Engineer: #{sbu_engineer.engineer.user_name}
                    - unless sbu_engineer.is_used_anywhere?
                      = link_to delete_admin_sbu_engineer_admins_employees_path(user_id: sbu_engineer.id),method: :delete,  :data => { :confirm => 'Are you sure?' } do
                        %span.glyphicon.glyphicon-trash
                .panel-body
                  .row.col-md-12
                    .col-md-1
                      %strong Engineer:
                    .col-md-9
                      = link_to "#", class: "inline_edit", data: {type: "select", source: User.all.collect{|a| {value: a.id, text: a.user_name}}, resource: "sbu_engineer", name: "engineer_id", url: employee_sbu_admins_employees_path(edit: true, engineer_id: sbu_engineer.engineer.id), "original-title" => "Update Admin Sbu"} do
                        = sbu_engineer.engineer.try(:user_name)

                      / = link_to "", class: , url: em..._path(edit: true, user_id: sbu_engineer.engineer.id)