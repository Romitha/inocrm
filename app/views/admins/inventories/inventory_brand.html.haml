= simple_form_for @inventory_brand, url: inventory_brand_admins_inventories_path, method: :post, html: {class: "validate_form"} do |f|
  = f.input :created_by, as: :hidden, input_html: {value: current_user.id}
  = f.input :code, input_html: {required: true}
  = f.input :name, input_html: {required: true}
  = f.submit "Save", class: "btn btn-sm btn-success", name: "#{params[:edit_more] ? 'update' : 'create'}"

%hr
= collapse_wrapper collapse_id: "product_brand", labelledby: "labelledby" do
  - @inventory_brand_all.each do |inventory_brand|
    = collapse collapse_type: "success", labelledby: "labelledby_#{inventory_brand.id}", header_content: inventory_brand.name, collapse_link: "link_#{inventory_brand.id}", collapse_id: "product_brand" do
      .row
        .col-md-4
          %strong Name:
          = link_to "#", class: "inline_edit", data: {type: "text", resource: "inventory_category2", name: "name", url: inventory_brand_admins_inventories_path(edit: true, inventory_category3_id: inventory_brand.id), "original-title" => "Update Product Category"} do
            = inventory_brand.name
        .col-md-4
          %strong Code:
          = link_to "#", class: "inline_edit", data: {type: "text", resource: "inventory_category2", name: "code", url: inventory_brand_admins_inventories_path(edit: true, inventory_category3_id: inventory_brand.id), "original-title" => "Update Product Category"} do
            = inventory_brand.code