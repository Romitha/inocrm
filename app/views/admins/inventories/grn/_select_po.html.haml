%table.table.table-hover
  %thead
    %tr
      %th No
      %th Store
      %th Supplier Name
      %th PO. No
      %th PO. Date
      %th Delivery date
      %th Remarks
      %th Created by
      %th Action
  %tbody
    - @pos.each_with_index do |po, index|
      %tr
        %td= index+1
        %td= po.store.name
        %td= po.supplier.name
        %td= po.po_no
        %td= po.created_at.try(:strftime, "%Y-%m-%d")
        %td= po.delivery_date.try(:strftime, "%Y-%m-%d")
        %td= po.remarks
        %td= po.created_by_user.email
        %td= link_to "Select", grn_admins_inventories_path(purchase_order: "select_po", po_id: po.id), remote: true, id: "po_#{po.id}", class: "po_select_link"

