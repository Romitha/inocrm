%table.table.table-hover
  %thead
    %tr
      %th No
      %th Category
      %th Serial code
      %th Description
      %th Model no
      %th Product no
      %th Part no
      %th Manufacture
      %th Unit
      %th Action
  %tbody
    - @inventory_products.each_with_index do |pr, index|
      %tr
        %td= index+1
        %td= pr.inventory_category3.name
        %td= pr.serial_no
        %td= pr.description
        %td= pr.model_no
        %td= pr.product_no
        %td= pr.spare_part_no
        %td= pr.inventory_product_info.manufacture.manufacture
        %td= pr.inventory_unit.unit
        %td= link_to "Select", grn_admins_inventories_path(purchase_order: "select_inventory", inventory_product_id: pr.id), remote: true, id: "i_product_#{pr.id}", class: "po_select_link"

