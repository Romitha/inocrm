= simple_form_for @inventory, url: inventory_admins_inventories_path, method: :post, html: {class: "validate_form"} do |f|
  .row
    .col-md-6
      = f.association :organization
    .col-md-6
      = f.association :inventory_product, collection: Organization.stores, as: :grouped_select, group_method: :inventory_products, group_label_method: :id, label_method: :product_no, value_method: :id
    .col-md-3
      = f.input :stock_quantity
    .col-md-3
      = f.input :reserved_quantity
    .col-md-3
      = f.input :available_quantity
    .col-md-3
      = f.input :reorder_level
    .col-md-3
      = f.input :reorder_quantity
    .col-md-3
      = f.input :max_quantity
    .col-md-3
      = f.input :safty_stock_quantity
    .col-md-3
      = f.input :lead_time_in_days
    .col-md-3
      = f.association :inventory_bin, label_method: :description
    .col-md-12
      = f.input :remarks
      = f.input :created_by, as: :hidden, input_html: {value: current_user.id}
    .col-md-3
      = f.submit "Save", class: "btn btn-success btn-sm", name: "create"
  %hr

= collapse_wrapper collapse_id: "inventory_list", labelledby: "inv_labelledby" do
  - @inventory_all.each do |inventory|
    = collapse collapse_type: "info", labelledby: "labelledby", header_content: "Serial no: #{inventory.inventory_product.serial_no}", collapse_link: "invlink_#{inventory.id}", collapse_id: "inventory_list" do
      .row
        .col-md-3
          %strong Store:
          = inventory.organization.name
        .col-md-3
          %strong Product:
          = inventory.inventory_product.serial_no
        .col-md-3
          %strong Stock quantity:
          = link_to "#", class: "inline_edit", data: {type: "text", resource: "inventory", name: "stock_quantity", url: inventory_admins_inventories_path(edit: true, inventory_id: inventory.id), "original-title" => "Update Product Category"} do
            = inventory.stock_quantity
        .col-md-3
          %strong Reserved quantity:
          = link_to "#", class: "inline_edit", data: {type: "text", resource: "inventory", name: "reserved_quantity", url: inventory_admins_inventories_path(edit: true, inventory_id: inventory.id), "original-title" => "Update Product Category"} do
