%h3 Payment Term
= simple_form_for @payment_term, url: payment_term_admins_tickets_path(create: true), html: {class: "validate_form"},method: :post do |f|
  .row{style: "margin-top:15px;"}
    .col-md-6
      = f.input :name, input_html: {required: true}
  .row{style: "margin-top:15px;"}
    .col-md-6
      = f.input :description
  .row{style: "margin-top:20px;margin-bottom:20px;"}
    .col-md-6
      = f.submit "Save", class: "btn btn-success pull-right", id: "submit_new_payment_term"

#accordion.panel-group
  - @payment_term_all.each_with_index do |payment_term, index|
    .panel.panel-info
      .panel-heading
        %h3.panel-title
          %a.accordion-toggle{"data-parent" => "#accordion", "data-toggle" => "collapse", :href => "##{index}"}
            #{index+1} Payment Term : #{payment_term.name}
          - unless payment_term.is_used_anywhere?
            = link_to delete_payment_term_admins_tickets_path(payment_term_id: payment_term.id), method: :delete, :data => { :confirm => 'Are you sure?' } do
              %span.glyphicon.glyphicon-trash

      .panel-collapse.collapse.in{:id => "#{index}"}
        .panel-body
          .row.col-md-12
            .col-md-1
              %strong Name:
            .col-md-3
              = link_to "#", class: "inline_edit load_style", data: {type: "text", resource: "payment_term", name: "name", url: payment_term_admins_tickets_path(edit: true, payment_term_id: payment_term.id), "original-title" => "Update Payment Term", value: payment_term.name}, style: "line-height: 6px;" do
                = payment_term.name
            .col-md-2
              %strong Description:
            .col-md-3
              = link_to "#", class: "inline_edit load_style only_float", data: {type: "text", resource: "payment_term", name: "description", url: payment_term_admins_tickets_path(edit: true, payment_term_id: payment_term.id), "original-title" => "Update Payment Term", value: payment_term.description}, style: "line-height: 6px;" do
                = payment_term.description