- pr = @inv_pro
.col-md-12
  %h4.strong Store: #{Inventory.find_by_store_id(@store).store_name}
.col-md-4
  Item Code:
  = pr.generated_item_code
.col-md-8
  Item Description:
  = pr.description
%strong
  .col-md-4
    Stock Quantity : #{Inventory.find_by_store_id(@store).stock_quantity}
  .col-md-4
    Reserved Quantity : #{Inventory.find_by_store_id(@store).reserved_quantity}
  .col-md-4
    Max Quantity : #{Inventory.find_by_store_id(@store).max_quantity}
.col-md-4
  Unit: #{pr.inventory_unit.unit}
.col-md-4
  Currency : #{pr.inventory_product_info.currency_type}
%strong
  .col-md-4
    Issue Type: #{pr.fifo == true ? "FIFO" : "Not FIFO"}

= paginate @inventory_non_serial_non_batches, remote: false, method: :get

.row.margin-top2
  .col-md-1{style: "text-align:center"}
    %strong No
  .col-md-1
    %strong GRN No
  .col-md-1
    %strong GRN Date
  .col-md-1
    %strong Available Quantity
  .col-md-1
    %strong Damage Quantity
  .col-md-2
    %strong Currency
  .col-md-1
    %strong Current GRN Cost
  .col-md-1
    %strong Total Cost
  .col-md-1
    %strong Select
%hr

- @inventory_non_serial_non_batches.each_with_index do |inventory_non_serial_non_batch, index|
  - content_for :grn_more, flush: true do
    
    %strong Remarks:
    #{simple_format inventory_non_serial_non_batch.remarks}
  .row
    .col-md-1{ "type"=> "button", "class"=> "btn btn-link has-popover", "data-toggle"=> "popover", "title"=> "GRN No: #{inventory_non_serial_non_batch.grn.grn_no}", "data-content"=> yield(:grn_more), "data-html" => "true", "data-trigger" => "hover", "data-placement" => "bottom" }
      - if params[:page]
        = (index+1) + 10*(params[:page].to_i-1)
      - else
        = (index+1)
    .col-md-1
      =inventory_non_serial_non_batch.grn.grn_no
    .col-md-1
      =inventory_non_serial_non_batch.grn.created_at.to_date.strftime(INOCRM_CONFIG["short_date_format"])
    .col-md-1
      =inventory_non_serial_non_batch.remaining_quantity
    .col-md-1
      =inventory_non_serial_non_batch.damage_quantity
    .col-md-2
      =inventory_non_serial_non_batch.currency.currency
      
    .col-md-1
      =inventory_non_serial_non_batch.current_unit_cost
    .col-md-1
      - cost = inventory_non_serial_non_batch.current_unit_cost
      - qnty = inventory_non_serial_non_batch.remaining_quantity
      =cost*qnty
    .col-md-1
      = link_to "Select", inv_searched_by_admins_searches_path(select_action: "select_non_serial_or_batch_more", inventory_non_serial_non_batch_id: inventory_non_serial_non_batch.id, store: @store ), class: "btn btn-default btn-sm"
  %hr
= paginate @inventory_non_serial_non_batches, remote: false, method: :get