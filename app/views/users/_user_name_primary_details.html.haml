.modal-header
  %h3.margin-none Update User name - Primary details
= simple_form_for @user, remote: true do |f|
  .modal-body
    = f.input :user_name, label: false, placeholder: "User name"
    = f.association :designation, collection: Designation.all, label: false, input_html: { class: 'chosen-select' }
    .form-group
      = password_field_tag "current_user_password", nil, placeholder: "password", class: "form-control"
  .modal-footer
    = link_to "Cancel", "#", data: {dismiss: "modal"}, class: "btn btn-link"
    = f.submit nil, name: @template_params, class: "btn btn-success"