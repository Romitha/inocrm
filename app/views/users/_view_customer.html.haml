.row
  %dl.dl-horizontal
    .col-md-6
      %h4 Customer Info
      %dt Customer
      %dd #{customer.mst_title.title} #{customer.name.capitalize}
      %dt Address
      %dd #{customer.address1} #{customer.address2} #{customer.address3}
      %dt
        - customer.contact_type_values.each do |contact_type_value|
          = contact_type_value.contact_type.try(:name)
          %br
      %dd
        - customer.contact_type_values.each do |contact_type_value|
          = contact_type_value.value
          %br
