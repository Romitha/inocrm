- user = @user
- address_list = @address_list
- primary_address = @primary_address
.row
  .col-md-4
    = image_tag "no_image.jpg"
    = file_field_tag :file

  .col-md-8
    .row
      .col-md-12
        %h2#user_name.margin-none= user.user_name
        %blockquote
          Software Engineer
          = link_to "Edit", initiate_user_profile_edit_user_path(template_params: "user_name_primary_details"), data: {toggle: "modal", target: "#user_edit_popup", userid: user.id}, remote: true, class: "pull-right"

    = panels panel_type: "default", header_content: "Primary Details" do
      .row
        .col-md-12#user_email
          = mail_to user.email, user.email
      .row
        .col-md-10
          %address
            %strong
              = primary_address.try :category
            = simple_format(primary_address.try :address)
        .col-md-2
          %span
            = link_to "More >>", initiate_user_profile_edit_user_path(template_params: "addresses_primary_details"), data: {toggle: "modal", target: "#user_edit_popup", userid: user.id}, remote: true, class: "pull-right" if address_list.present?
      .pull-right= link_to "Edit", initiate_user_profile_edit_user_path(template_params: "addresses_primary_details"), data: {toggle: "modal", target: "#user_edit_popup", userid: user.id}, remote: true, class: "pull-right"

    #id_additional_details_panel.panel.panel-default
      .panel-heading
        Additional Details
      .panel-body
        = link_to "Edit", initiate_user_profile_edit_user_path(template_params: "additional_details"), data: {toggle: "modal", target: "#user_edit_popup", userid: user.id}, remote: true

    #id_security_details_panel.panel.panel-default
      .panel-heading
        Security
      .panel-body
        .row
          .col-md-10#id_user_pw
            XXXXXXXX
          .col-md-2#id_user_pw_edit
            = link_to "Edit", initiate_user_profile_edit_user_path(template_params: "password_security_details"), data: {toggle: "modal", target: "#user_edit_popup", userid: user.id}, remote: true

.col-md-1
/ = render "username_edit", mustache: {a: "apple", b: "b"}
