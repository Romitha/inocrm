- organizations = (@organizations || Organization.organization_customers)
- print_object = @print_object

.row
  %br/
  .col-md-9
  .col-md-3
    =label_tag "Number of Customers: "
    = organizations.total
  %br/

- if organizations.present?
  .row
    %br/
    .col-md-12
      = paginate organizations, remote: true, method: :get

      %table.table.table-hover
        %thead
          %tr
            %th No
            %th Name
            %th Account No
            %th Code
            %th Industry Type
            %th Action
        %tbody
          - organizations.each_with_index do |org, index|
            %tr
              %td
                - if params[:page]
                  = (index+1)+ 10*(params[:page].to_i-1)
                - else
                  = (index+1)
              %td= org.name
              %td
              %td= org.code
              %td= org.industry_type.name
              - if params[:from_where] == "new_ticket"
                %td= link_to "Select", contracts_path(organization_id: org.id, select_ticket: true, from_where: params[:from_where]), remote: true, onclick: "Tickets.ajax_loader(); return false;"
              - else
                %td= link_to "Select", contracts_path(organization_id: org.id, select: true, from_where: params[:from_where]), remote: true, onclick: "Tickets.ajax_loader(); return false;"

      = paginate organizations, remote: true, method: :get